# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Default indentation (4 spaces) for most files
[*.{js,ts,jsx,tsx,py}]
indent_size = 4

# PHP/Laravel specific (PSR-12 recommends 4 spaces)
[*.php]
indent_size = 4

# Configuration files
[*.{json,yml,yaml}]
indent_size = 2

# HTML/CSS/Sass
[*.{html,css,scss,less}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Make files
[Makefile]
indent_style = tab